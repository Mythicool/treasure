# Production Environment Variables
NODE_ENV="production"
PORT="8000"

# Database (will be set by Railway)
DATABASE_URL=""

# JWT Secrets (will be generated)
JWT_SECRET=""
JWT_REFRESH_SECRET=""

# Firebase (disabled for now)
DISABLE_FIREBASE="true"

# Security Settings
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
MAX_CLAIM_RADIUS_METERS="30"
CLAIM_VELOCITY_LIMIT_SECONDS="60"

# GPS Settings
MOCK_GPS_VERIFICATION="false"

# CORS Settings
CORS_ORIGIN="https://dashboard.localtreasure.app,https://localtreasure.app"
